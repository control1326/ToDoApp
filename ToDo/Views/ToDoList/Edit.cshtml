@using ToDo.ViewModels
@model ToDoListVM

@{
    ViewData["Title"] = "Edit";
}


<div class="container">
    <h1>Edit item</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Content" class="control-label"></label>
                    <input asp-for="Content" class="form-control" />
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label  class="control-label">Assigned To</label>
                    @Html.DropDownListFor(m => m.UserID, (SelectList)Model.UserList, "Please select", new { @class = "form-control" })
                    <span asp-validation-for="UserID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IsComplete" class="control-label"></label>
                    <input type="checkbox" asp-for="IsComplete" />
                    <span asp-validation-for="IsComplete" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>


            </form>


        </div>

    </div>
    <a asp-action="Index" class="btn btn-info mt-3">Back to List</a>

</div>
